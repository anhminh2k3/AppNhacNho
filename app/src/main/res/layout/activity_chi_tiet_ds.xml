<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiTietDS"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/Thoat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">
        <ImageView

            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/back_launcher_foreground"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Danh sÃ¡ch"
            android:textSize="23dp"
            android:textColor="#1E88E5"
            android:layout_marginTop="10dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/NameDS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="To Do List"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#1E88E5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lvChiTietDS"
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_gravity="end">
        <ImageView
            android:id="@+id/txtThemList"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"

            android:background="@drawable/botron"
            android:backgroundTint="#2196F3"
            android:src="@drawable/add_foreground"></ImageView>

    </LinearLayout>

</LinearLayout>