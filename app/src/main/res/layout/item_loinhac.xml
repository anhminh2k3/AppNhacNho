<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/rbnCheck"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text=""
                android:layout_marginTop="11dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/itemloinhac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtTieuDe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiêu đề"
                android:textSize="25dp"
                android:singleLine="true" >
            </TextView>
            <TextView
                android:id="@+id/txtNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6E6D6D"
                android:textSize="20dp"
                android:text="Ghi chú"
                android:singleLine="true"
                ></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:singleLine="true">
                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6E6D6D"
                    android:textSize="20dp"
                    android:text="21:10"
                    android:layout_marginRight="7dp"></TextView>


                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Hôm nay"
                    android:textColor="#6E6D6D"></TextView>
            </LinearLayout>
            <ImageView
                android:id="@+id/imgAnh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:singleLine="true"></ImageView>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>